<UserControl x:Class="YMM4PluginPortal.View.YMM4PluginPortalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YMM4PluginPortal.View"
             xmlns:vm="clr-namespace:YMM4PluginPortal.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:PluginViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <ListView ItemsSource="{Binding Plugins}" AlternationCount="2">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#F0F0F0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="プラグイン名" Width="200" DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="作者" Width="150" DisplayMemberBinding="{Binding Author}" />
                    <GridViewColumn Header="バージョン" Width="80" DisplayMemberBinding="{Binding Version}" />
                    <GridViewColumn Header="ローカルVer." Width="100" DisplayMemberBinding="{Binding LocalVersion}" />
                    <GridViewColumn Header="作成日" Width="160" DisplayMemberBinding="{Binding CreatedAt}"/>
                    <GridViewColumn Header="説明" Width="350" DisplayMemberBinding="{Binding Description}" />
                    <GridViewColumn Header="カテゴリ" Width="120" DisplayMemberBinding="{Binding Category[0]}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
